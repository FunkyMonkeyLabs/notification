  "keywords": ["notification", "mail", "sms", "abdulklarapl", "funkymonkeylabs", "funky", "monkey"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Patryk Szlagowski",
      "email": "szlagowskipatryk@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^3.7 || ^4.0 || ^5.0",
    "swiftmailer/swiftmailer": "^5.2"
  },
  "suggest": {
    "swiftmailer/swiftmailer": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "FML\\Notification\\": "src/"
    }
  },
  "autoload-dev": {
